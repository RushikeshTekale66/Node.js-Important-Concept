<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
</head>

<body>
    <h1>URL shortner</h1>
    <!-- show the generated url -->
    <% if (locals.id){ %>
        <p>URL Genereted : http://localhost:8001/url/<%= id %>
        </p>
        <% } %>
            <!--  form to generate the url -->
            <form method="post" action="/url">
                <label>Enter Your Original URL</label>
                <input type="text" name="url" placeholder="http://example.com" />
                <button type="submit">Generate</button>
            </form>
            <!-- List of short id & url  -->
            <% if (locals.urls) { %>
                <table>
                    <thead>
                        <th>Sr. No</th>
                        <th>ShortID</th>
                        <th>Redirect</th>
                        <th>Clicks</th>
                    </thead>
                    <tbody>
                        <% urls.forEach((url, index)=> { %>
                            <tr>
                                <td>
                                    <%= index+1 %>
                                </td>
                                <td>
                                    <%= url.shortId %>
                                </td>
                                <td>
                                    <%= url.redirectURL %>
                                </td>
                                <td>
                                    <%= url.visitHistory.length %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <% } %>
</body>

</html>